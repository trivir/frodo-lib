{
  "testTimeout": 60000,
  "testRunner": "jest-jasmine2",
  "roots": [
    "<rootDir>/src/"
  ],
  "testMatch": [
    "**/?(*.)(test).ts"
  ],
  "testPathIgnorePatterns": [
    "/node_modules/"
  ],
  "transform": {
    "\\.ts$": ["babel-jest", { "configFile": "./babel.config.cjs.json" }]
  },
  "snapshotResolver": "<rootDir>/snapshotResolve.js",
  "verbose": false
}
